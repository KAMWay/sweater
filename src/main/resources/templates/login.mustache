    <script>
        function login() {
            var fullName = $("#fullName").val();
            var email = $("#email").val();
            var phoneCountry = $("#phoneCountry").val();
            var phone = $("#phone").val();
            var job = $("#job").val();
            var password = $("#password").val();
            var confirm = $("#confirm").val();

            $.post("signin", {
                "fullName": fullName,
                "email": email,
                "phoneCountry": phoneCountry,
                "phone": phone,
                "job": job,
                "password": password,
                "confirm": confirm
            })
                    .done(function (data) {
                        $("#result").empty().append(data);
                    });
        }
    </script>
